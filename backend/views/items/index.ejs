<%- include('../partials/header'); %>

<form action="/items" method="post">
  <div class="form-group">
    <label>商品名</label>
    <input type="text" name="name" />
  </div>

  <div class="form-group">
    <label>値段</label>
    <input type="text" name="price" />
  </div>
  
  <input type="submit" value="登録する" />
</form>

<h1>商品一覧</h1>
<ul>
  <% items.forEach((item) => { %>
    <li><%= item.name; %></li>
  <% }) %>
</ul>

